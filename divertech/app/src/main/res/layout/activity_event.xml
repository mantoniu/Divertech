<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/headerMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:name="Si3.divertech.headerMenu"
        tools:layout="@layout/fragment_header_menu"
        />

    <!-- En tête -->

    <TextView
        android:id="@+id/nameEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nameEventExemple"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:background="@drawable/back"
        app:layout_constraintTop_toBottomOf="@+id/headerMenu"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </TextView>

    <ImageView
        android:id="@+id/return_arrow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/return_arrow"
        app:layout_constraintTop_toTopOf="@id/nameEvent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/nameEvent"
        android:contentDescription="return arrow">
    </ImageView>

    <!-- Première partie -->

    <TextView
        android:id="@+id/text_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/localisationEventExemple"
        android:maxWidth="150dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/nameEvent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </TextView>

    <ImageView
        android:id="@+id/image_event"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="-10dp"
        android:src="@drawable/image_default"
        app:layout_constraintTop_toTopOf="@id/text_input"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/text_input"
        android:contentDescription="image of the event">
    </ImageView>

    <ImageView
        android:id="@+id/logo_map"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/localisation"
        app:layout_constraintTop_toTopOf="@id/text_input"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/text_input"
        android:contentDescription="map logo">
    </ImageView>

    <!-- parking -->

    <TextView
        android:id="@+id/text_book_parking_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bookParkingPlace"
        android:textSize="15sp"
        android:maxWidth="250dp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/text_input"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </TextView>

    <ImageView
        android:id="@+id/logo_car"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/car"
        android:layout_marginTop="-15dp"
        app:layout_constraintTop_toTopOf="@id/text_book_parking_place"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/text_book_parking_place"
        android:contentDescription="car logo">
    </ImageView>

    <!-- texte central -->

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bloc_lost_object"
        app:layout_constraintTop_toBottomOf="@id/text_book_parking_place"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fillViewport="true"
        android:layout_margin="25dp"
        >
        <TextView
            android:id="@+id/description_event"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/lopus"
            android:textSize="15sp"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@id/logo_lost_object"
            app:layout_constraintTop_toBottomOf="@id/text_book_parking_place"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
        </TextView>
    </androidx.core.widget.NestedScrollView>

    <!-- boutons bas -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bloc_lost_object"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp">

        <ImageView
            android:id="@+id/logo_lost_object"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/lost_object"

            app:layout_constraintBottom_toTopOf="@id/text_object"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:contentDescription="losst object logo">
        </ImageView>

        <TextView
            android:id="@+id/text_object"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lost_object"
            android:textAlignment="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bloc_reporting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/bloc_lost_object"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp">

        <ImageView
            android:id="@+id/logo_report"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/report_accident"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/text_report"
            app:layout_constraintRight_toRightOf="parent"
            android:contentDescription="report logo">
        </ImageView>

        <TextView
            android:id="@+id/text_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/report_incident"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bloc_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/bloc_lost_object"
        android:layout_marginBottom="30dp">

        <ImageView
            android:id="@+id/logo_contact_admin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/contact_admin"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/text_contact"
            app:layout_constraintLeft_toLeftOf="parent"
            android:contentDescription="contact admin logo">
        </ImageView>

        <TextView
            android:id="@+id/text_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/report_incident"
            android:textSize="15sp"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>



    <!-- textes boutons bas -->





</androidx.constraintlayout.widget.ConstraintLayout>