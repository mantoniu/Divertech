<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".EventActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/headerMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:name="Si3.divertech.HeaderMenu"
        tools:layout="@layout/fragment_header_menu"
        />

    <!-- En tête -->

    <TextView
        android:id="@+id/nameEvent"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:maxWidth="300dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="@string/nameEventExemple"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerMenu" />

    <ImageButton
        android:id="@+id/return_arrow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:contentDescription="return arrow"

        android:background="@drawable/roundbackground"
        android:src="@drawable/return_arrow"
        app:layout_constraintBottom_toTopOf="@id/place_and_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/nameEvent"
        app:layout_constraintTop_toTopOf="@id/nameEvent" />

    <!-- Première partie -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/place_and_image"
        app:layout_constraintTop_toBottomOf="@+id/nameEvent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:id="@+id/localisation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/localisationEventExemple"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/image_event"
            app:layout_constraintRight_toLeftOf="@id/logo_map"
            app:layout_constraintBottom_toTopOf="@id/date" />

        <TextView
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="10 aout 2024 23h30"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            app:layout_constraintTop_toBottomOf="@id/localisation"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/calendar_add"
            app:layout_constraintLeft_toRightOf="@id/image_event" />

        <ImageView
            android:id="@+id/image_event"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/image_default"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="image of the event" />

        <ImageView
            android:id="@+id/logo_map"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/location"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/localisation"
            app:layout_constraintBottom_toTopOf="@id/calendar_add"
            android:contentDescription="@string/map_button" />

        <ImageView
            android:id="@+id/calendar_add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/calendar"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logo_map"
            app:layout_constraintRight_toRightOf="@id/logo_map"
            app:layout_constraintLeft_toLeftOf="@id/logo_map"
            android:contentDescription="@string/add_to_calendar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- parking -->

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/parking"
        app:layout_constraintTop_toBottomOf="@+id/place_and_image"
        app:layout_constraintStart_toStartOf="@+id/bloc_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="@color/logo_white"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardElevation="10dp"
        android:clickable="true"
        android:focusable="true"
        app:strokeColor="@color/logo_blue"
        app:strokeWidth="3dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textBookParkingPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bookParkingPlace"
                android:textSize="15sp"
                android:maxWidth="250dp"
                android:textAlignment="center"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@id/goCar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageView
                android:id="@+id/goCar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/car"
                android:layout_marginTop="-15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/textBookParkingPlace" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    <!-- texte central -->

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bloc_description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bloc_lost_object"
        app:layout_constraintTop_toBottomOf="@id/parking"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="25dp"
        app:cardBackgroundColor="@color/logo_white"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:clickable="true"
        android:focusable="true"
        app:strokeColor="@color/logo_blue"
        app:strokeWidth="3dp">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:layout_margin="25dp">

            <TextView
                android:id="@+id/description_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lopus"
                android:textSize="15sp"
                android:textAlignment="center" />

        </ScrollView>
    </com.google.android.material.card.MaterialCardView>
    <!-- boutons bas -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bloc_lost_object"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp">

        <ImageView
            android:id="@+id/logo_lost_object"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/lost_object"

            app:layout_constraintBottom_toTopOf="@id/text_object"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:contentDescription="losst object logo">
        </ImageView>

        <TextView
            android:id="@+id/text_object"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lost_object"
            android:textAlignment="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bloc_reporting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/bloc_lost_object"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp">

        <ImageView
            android:id="@+id/logo_report"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/report_accident"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/text_report"
            app:layout_constraintRight_toRightOf="parent"
            android:contentDescription="report logo">
        </ImageView>

        <TextView
            android:id="@+id/text_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/report_incident"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bloc_contact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/bloc_lost_object"
        android:layout_marginBottom="17dp">

        <ImageView
            android:id="@+id/logo_contact_admin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/contact_admin"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/text_contact"
            app:layout_constraintLeft_toLeftOf="parent"
            android:contentDescription="contact admin logo">
        </ImageView>

        <TextView
            android:id="@+id/text_contact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/contact_admin"
            android:textSize="15sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>