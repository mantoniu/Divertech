<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventActivity">

    <fragment
        android:id="@+id/headerMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:name="Si3.divertech.headerMenu"
        tools:layout="@layout/fragment_header_menu"
        />

    <!-- En tête -->

    <TextView
        android:id="@+id/nameEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nameEventExemple"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:background="@drawable/back"
        app:layout_constraintTop_toBottomOf="@+id/headerMenu"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </TextView>

    <ImageView
        android:id="@+id/return_arrow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/return_arrow"
        app:layout_constraintTop_toTopOf="@id/nameEvent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/nameEvent">
    </ImageView>

    <!-- Première partie -->

    <TextView
        android:id="@+id/localisation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/localisationEventExemple"
        android:maxWidth="150dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/nameEvent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </TextView>

    <ImageView
        android:id="@+id/imageEvent"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="-10dp"
        android:src="@drawable/image_default"
        app:layout_constraintTop_toTopOf="@id/localisation"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/localisation">
    </ImageView>

    <ImageView
        android:id="@+id/goMap"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:src="@drawable/localisation"
        app:layout_constraintTop_toTopOf="@id/localisation"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/localisation">
    </ImageView>

    <!-- parking -->

    <TextView
        android:id="@+id/textBookParkingPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bookParkingPlace"
        android:textSize="15sp"
        android:maxWidth="250dp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/localisation"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </TextView>

    <ImageView
        android:id="@+id/goCar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/car"
        android:layout_marginTop="-15dp"
        app:layout_constraintTop_toTopOf="@id/textBookParkingPlace"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/textBookParkingPlace">
    </ImageView>

    <!-- texte central -->

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/goLostObject"
        app:layout_constraintTop_toBottomOf="@id/textBookParkingPlace"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fillViewport="true"
        android:layout_margin="25dp"
        >
        <TextView
            android:id="@+id/descriptionEvent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/lopus"
            android:textSize="15sp"

            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@id/goLostObject"
            app:layout_constraintTop_toBottomOf="@id/textBookParkingPlace"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
        </TextView>
    </androidx.core.widget.NestedScrollView>

    <!-- boutons bas -->

    <ImageView
        android:id="@+id/goLostObject"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/lost_object"
        android:layout_marginTop="-50dp"
        app:layout_constraintTop_toTopOf="@id/textObject"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </ImageView>

    <ImageView
        android:id="@+id/goReport"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/report_accident"
        android:layout_marginTop="-50dp"
        app:layout_constraintTop_toTopOf="@id/textObject"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/goLostObject">
    </ImageView>

    <ImageView
        android:id="@+id/goContactAdmin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/contact_admin"
        android:layout_marginTop="-50dp"
        app:layout_constraintTop_toTopOf="@id/textObject"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/goLostObject">
    </ImageView>

    <!-- textes boutons bas -->

    <TextView
        android:id="@+id/textObject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lost_object"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </TextView>

    <TextView
        android:id="@+id/textReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/report_incident"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/textObject">
    </TextView>

    <TextView
        android:id="@+id/textContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/report_incident"
        android:textSize="15sp"
        android:layout_marginBottom="30dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/textObject">
    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>